  <xsd:complexType name="rateType">
    <xsd:all>
      <xsd:element name="sex"
                   minOccurs="0"
                   type="sexType"/>
      <xsd:element name="subpopulationRef"
                   minOccurs="0"
                   type="xsd:NCName"/>
      <xsd:element name="value"
                   type="xsd:decimal"/>
    </xsd:all>
  </xsd:complexType>

  <xsd:complexType name="ratesType">
    <xsd:sequence>
      <xsd:element name="rate"
                   maxOccurs="unbounded"
                   type="rateType"/>
    </xsd:sequnce>
    <xsd:unique name="uniqueRate">
      <xsd:selector xpath="rate"/>
      <xsd:field xpath="sex"/>
      <xsd:field xpath="subpopulationRef"/>
    </xsd:unique>
  </xsd:complexType>

  <xsd:complexType name="neutralLocusType">
    <xsd:sequence>
      <xsd:element name="recombination"
                   minOccurs="0"
                   type="ratesType"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="alleleType">
    <xsd:all>
      <xsd:element name="initialFrequency"
                   type="xsd:ratesType"/>
      <xsd:element name="selectionCoefficient"
                   type="xsd:ratesType"/>
    </xsd:all>
  </xsd:complexType>

  <xsd:complexType name="nonNeutralLocusType">
    <xsd:complexContent>
      <xsd:extension base="neutralLocusType">
        <xsd:element name="allele"
                     type="alleleType"/>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>

  <xsd:complexType name="chromosomeType">
    <xsd:sequence>
      <xsd:element name="type"
                   type="chromosomalIdentity"/>
      <xsd:element name="name"
                   minOccurs="0"
                   type="xsd:string"/>
      <xsd:choice maxOccurs="unbounded">
        <xsd:element name="neutralLocus"
                     type="neutralLocusType"/>
        <xsd:element name="nonNeutralLocus"
                     type="nonNeutralLocusType"/>
      </xsd:choice>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="geneticStructureType">
    <xsd:element name="chromosome" minOccurs="1" maxOccurs="unbounded" type="chromosomeType"/>
  </xsd:complexType>

  <xsd:complexType name="subpopulationType">
    <xsd:all>
      <xsd:element name="populationSize" type="xsd:positiveInteger"/>
      <xsd:element name="name" type="xsd:NCName"/>
    </xsd:all>
  </xsd:complexType>

  <xsd:complexType name="migrationType">
    <xsd:all>
      <xsd:element name="sex"
                   minOccurs="0"
                   type="sexType" />
      <xsd:element name="fromRef"
                   type="xsd:NCName" />
      <xsd:element name="toRef"
                   type="xsd:NCName" />
      <xsd:element name="rate"
                   type="xsd:decimal" />
    </xsd:all>
  </xsd:complexType>

  <xsd:complexType name="migrationSchemeType">
    <xsd:sequence>
      <xsd:element name="migration"
                   minOccurs="0"
                   maxOccurs="unbounded"
                   type="migrationType"/>
    </xsd:sequence>
